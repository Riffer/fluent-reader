{
  "name": "fluent-reader",
  "version": "1.1.3",
  "description": "Modern desktop RSS reader",
  "main": "./dist/electron.js",
  "scripts": {
    "build": "SET NODE_OPTIONS=--openssl-legacy-provider && webpack --config ./webpack.config.js",
    "electron": "SET NODE_OPTIONS= && electron ./dist/electron.js",
    "start": "npm run build && npm run electron",
    "format": "prettier --write .",
    "cert": "electron-builder create-self-signed-cert -p Riffer",
    "package-win": "electron-builder --win --x64",
    "package-win-ci": "electron-builder -w --x64 -p never && electron-builder -w --ia32 -p never",
    "package-mac": "electron-builder --mac --x64",
    "package-mas": "bash build/resignAndPackage.sh",
    "package-linux": "electron-builder --linux --x64 -p never"
  },
  "keywords": [],
  "author": "Haoyuan Liu",
  "license": "BSD-3-Clause",
  "repository": "github:yang991178/fluent-reader",
  "devDependencies": {
    "@fluentui/react": "^7.204.0",
    "@types/lovefield": "^2.1.4",
    "@types/nedb": "^1.8.13",
    "@types/react": "^16.14.41",
    "@types/react-dom": "16.9.19",
    "@types/react-redux": "^7.1.25",
    "@seald-io/nedb": "^4.0.2",
    "@yang991178/rss-parser": "^3.8.1",
    "electron": "^21.0.1",
    "electron-builder": "^23.0.3",
    "electron-react-devtools": "^0.5.3",
    "electron-store": "^8.1.0",
    "electron-window-state": "^5.0.3",
    "font-list": "^1.4.5",
    "js-md5": "^0.7.3",
    "lovefield": "^2.1.12",
    "nedb": "^1.8.0",
    "prettier": "2.3.2",
    "qrcode.react": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-intl-universal": "^2.2.5",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-devtools": "^3.5.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "ts-loader": "^8.0.4",
    "typescript": "^4.3.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "win": {
    "certificateFile": "./Riffer.pfx",
    "certificatePassword": "yellow01",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "build/icon.png",
    "certificateSubjectName": "Interactive Knowledge, Inc",
    "signingHashAlgorithms": [
      "sha256"
    ],
    "publisherName": "Interactive Knowledge, Inc",
    "signAndEditExecutable": true
  }
}
